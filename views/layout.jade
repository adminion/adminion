!!! 5
html
	head
		block head
			link(rel='stylesheet', href='/stylesheets/styles.css')
			script(type="text/javascript", src='/scripts/jquery-1.8.3.min.js')
			title= env.serverName
	body
		#wrapper
			block wrapper
				#header
					block header
						block banner
							#banner
								h1
									a(href='/') #{env.serverName}
						block session
							#session
								if (request.session.passport.user)
									span Logged on as 
										a(href='/players/' + request.session.passport.user) #{request.session.passport.user} 
										[&nbsp;
										a(href='/logoff') Logoff
										&nbsp;]
								else
									span Not logged on. 
										[&nbsp; 
										a(href='/logon?redir=' + request.url) Logon
										&nbsp;]
				#body
					block body
						block menu
							#menu
								ul
									li
										a(href='/games') Games
									li
										a(href='/players') Players
						block main
							#main
								block content
									#content
