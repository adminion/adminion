!!! 5
html
	head
		block head
			// link(rel='stylesheet', href='/stylesheets/styles.css')
			title= adminion.env.serverName
			script(src='/scripts/jquery.js')
			block socketio
	body
		#wrapper
			block wrapper
				#header
					block header
						block banner
							#banner
								// this would be a good place for a banner image
						block breadcrumbs
							#breadcrumbs
								// breadcrumbs leave a trail as players navigate the server
								h3
									- var breadcrumbs = request.url.replace(/\?.*$/, '')
									- breadcrumbs = breadcrumbs.split('/')
									- each crumb, id in breadcrumbs
										if (!id)
											a(href='/') #{adminion.env.serverName}
										else
											if (!!crumb)
												&nbsp;/&nbsp;
												- var url = ''
												- for (var i=1; i<=id	; i++)
													- url += '/' + breadcrumbs[i]
													- crumb = crumb.charAt(0).toUpperCase() + crumb.slice(1)
												a(href=url) #{crumb}
						block session
							#session
								if (request.session.passport.user)
									span Logged on as 
										a(href='/players/' + request.session.passport.user) #{request.session.passport.user}
										&nbsp;[&nbsp;
										a(href='/logoff') Logoff
										&nbsp;]&nbsp;
								else
									span Not logged on. 
										[&nbsp; 
										a(href='/logon?redir=' + request.url) Logon
										&nbsp;]
				#body
					block body
						block menu
							#menu
								if (config.links && request.session.passport.user)
									label(for='links') 
										h3 Player's Menu:
									ul#links
										each url, title in config.links
											li: a(href=url) #{title}
						block main
							#main
								block content
									#content
									
									
