extends layout
block content
	#contents
		h2=account.handle
			if (request.user.admin || account.email === request.user.email)
				&nbsp;[&nbsp;
				a(href='/accounts/'+account.email+'/update') Update Info
				&nbsp]&nbsp;
		table
				tbody
					- var hideKeys = ['salt', 'hash', '_id', '__v', 'accountStats', 'admin']
					each value, key in account.toObject()
						if 0 > hideKeys.indexOf(key)
							tr
								td=key
								td=value
					each value, key in account.accountStats.toObject()
						tr
							td=key
							td=value
