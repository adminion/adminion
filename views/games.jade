extends layout

block content
	#content
		h2 Games:
			&nbsp;[&nbsp;
			a(href="/games/create") Create Game
			&nbsp;]&nbsp;
			ol
				each game in games
					- var playerOne = accounts[game.playerOne.accountID];
					li 
						a(href='/games/' + game['_id']) #{playerOne.handle}'s Game
						if (game.status === 'lobby')
							&nbsp;[&nbsp;
							a(href='/games/' + game['_id'] + '/lobby') Join
							&nbsp;]&nbsp;