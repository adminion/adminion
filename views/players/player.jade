extends layout
block content
	#contents
		h2=player.handle
			if (request.user.admin || player.email === request.user.email)
				&nbsp;[&nbsp;
				a(href='/players/'+player.email+'/update') Update Info
				&nbsp]&nbsp;
		table
				tbody
					- var hideKeys = ['salt', 'hash', '_id', '__v', 'playerStats', 'admin']
					each value, key in player.toObject()
						if 0 > hideKeys.indexOf(key)
							tr
								td=key
								td=value
					each value, key in player.playerStats.toObject()
						tr
							td=key
							td=value
